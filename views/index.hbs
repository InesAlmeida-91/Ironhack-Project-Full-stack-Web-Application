
<main class="d-flex" style="width: 98vw;">
    <section class="col-3" style="margin-top: 70px; font-family: 'Montserrat', sans-serif;">
    <h4 style="color:#FF9800; font-weight: bold;">Interests</h3>
    <p><a href="/humor" style="color:#000000; text-decoration: none;">&bull; Humor</a></p>
    <p><a href="/sports" style="color:#000000; text-decoration: none;">&bull; Sports</a></p>
    <p><a href="/ask" style="color: #000000; text-decoration: none;">&bull; Ask</a></p>
    <p><a href="/todayi" style="color: #000000; text-decoration: none;">&bull; Today I...</a></p>
    <p><a href="/others" style="color:#000000; text-decoration: none;">&bull; Others</a></p>
  </section>
<section style="margin-top: 50px;">
{{#if currentUser}}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" style="margin: 50px 0 0 65%;">
  Create a Post!
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <form action="/post" method="post" name="createPost" enctype="multipart/form-data">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
                <select name="theme" id="" required>
                    <option value="">Select a Theme</option>
                    <option value="Humor">Humor</option>
                    <option value="Sports">Sports</option>
                    <option value="Ask">Ask</option>
                    <option value="Today I...">Today I...</option>
                    <option value="Others">Others</option>
                </select>
            </h1>
        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
      </div>
      <div class="modal-body">
        <h5 class="card-title">
            <input type="text" name="title" id="" placeholder="Add Title..." style="width: 100%;" required>
        </h5>
        <textarea name="content" id="createPost" rows="6" placeholder="Write the description to your post..." style="resize: none; width: 100%;" required></textarea>
        <label>Image:
        <input type="file" name="post-image" class="form-control-file" />
        </label>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <input type="submit" value="Create Post" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>
</div>

{{else}}
{{/if}}

        {{#each postArray}}
        <div class="card" style="margin-top: 50px; width:55vw;">
            <div class="card-header">{{theme}}</div>
            <div class="card-body">
                <a href="/post/{{_id}}"> <h5 class="card-title">{{title}}</h5> </a>
                <p class="card-text">{{content}} <br>
                <img src="{{imageUrl}}" style="max-width: 100%;">
                <br> Comments: {{commentcount}}</p>                
            </div>
            <div class="card-footer">
                <a href="/profile/{{author.username}}">{{author.username}}</a>
            </div>
        </div>
        {{/each}}
    </section>
    <section class="" style="margin-top: 100px;">
<div class="card" style="width: 16vw; margin-left: 2vw;">
    <div class="card-header">
        <h3>NEWS CORNER</h3>
    </div>
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="{{news.[0].image_url}}" class="d-block w-100" alt="...">
            <h5>{{news.[0].title}}</h5>
            <p>{{news.[0].snippet}}</p>
            <p><a href="{{news.[0].url}}" target="_blank" rel="noopener noreferrer" style="margin-left: 10%;">{{news.[0].source}}</a></p>
        </div>
        <div class="carousel-item">
            <img src="{{news.[1].image_url}}" class="d-block w-100" alt="...">
            <h5>{{news.[1].title}}</h5>
            <p>{{news.[1].snippet}}</p>
            <p><a href="{{news.[1].url}}" target="_blank" rel="noopener noreferrer" style="margin-left: 10%;">{{news.[1].source}}</a></p>
        </div>
        <div class="carousel-item">
            <img src="{{news.[2].image_url}}" class="d-block w-100" alt="...">
            <h5>{{news.[2].title}}</h5>
            <p>{{news.[2].snippet}}</p>
            <p><a href="{{news.[2].url}}" target="_blank" rel="noopener noreferrer" style="margin-left: 10%;">{{news.[2].source}}</a></p>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
</div>

    </section>

</main>