<main class="container row align-items-start">
    <section class="col-3">
        <h4>Interests</h3>
        <p><a href="/humor">Humor</a></p>
        <p><a href="/sports">Sports</a></p>
        <p><a href="/ask">Ask</a></p>
        <p><a href="/todayi">Today I...</a></p>
        <p><a href="/others">Others</a></p>
    </section>
    <section class="col-5">
{{#if currentUser}}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" style="margin: 50px 0 0 65%;">
  Create a Post!
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <form action="/post" method="post" name="createPost" enctype="multipart/form-data">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
                <select name="theme" id="" required>
                    <option value="">Select a Theme</option>
                    <option value="Humor">Humor</option>
                    <option value="Sports">Sports</option>
                    <option value="Ask">Ask</option>
                    <option value="Today I...">Today I...</option>
                    <option value="Others">Others</option>
                </select>
            </h1>
        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
      </div>
      <div class="modal-body">
        <h5 class="card-title">
            <input type="text" name="title" id="" placeholder="Add Title..." style="width: 100%;" required>
        </h5>
        <textarea name="content" id="createPost" rows="6" placeholder="Write the description to your post..." style="resize: none; width: 100%;" required></textarea>
        <label>Image:
        <input type="file" name="post-image" class="form-control-file" />
        </label>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <input type="submit" value="Create Post" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>
</div>

{{else}}
{{/if}}

        {{#each postArray}}
        <div class="card" style="margin-top: 50px; width:55vw;">
            <div class="card-header">{{theme}}</div>
            <div class="card-body">
                <a href="/post/{{_id}}"> <h5 class="card-title">{{title}}</h5> </a>
                <p class="card-text">{{content}} <br>
                <img src="{{imageUrl}}">
                <br> Comments: {{commentcount}}</p>                
            </div>
            <div class="card-footer">
                <a href="/profile/{{author.username}}">{{author.username}}</a>
            </div>
        </div>
        {{/each}}
    </section>
    <section class="col-3">
    </section>
</main>