<div class="container">
    
    <button class="btn btn-secondary" onclick="goBack()" style="margin-top: 50px;">Go Back</button>
    <div class="card" style="margin-top: 50px; width:55vw;">
        <div class="card-header">{{post.theme}}</div>
        <div class="card-body">
            <h4 class="card-title">{{post.title}}</h4>
            <p class="card-text">{{post.content}} 
            {{!-- <br><br> Comments: {{post.commentcount}}</p> --}}
            {{!-- <a href="#" class="btn btn-primary" id="addCommentButton">Add Comment</a> --}}
            {{!-- <a href="#" class="btn btn-primary" id="seeCommentsButton">See Comments</a> --}}
    
        </div>
    
        {{!-- {{#each comment}} --}}
        <div class="container">
            <h6>Comments:</h6>
            <div class="card" style="width: 53vw;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">An item - Athor</li>
                    <li class="list-group-item">A second item - Author</li>
                    <li class="list-group-item">A third item - Author</li>
                </ul>
            </div>
        
    
        <form action="/post/{{post.id}}" method="post" name="addComment" style="margin-bottom: 10px;">
            <textarea name="content" id="addComment" rows="1" style="resize: none; width:52.5vw;" required></textarea>
            <br>
            <input type="submit" value="Add Comment" class="btn btn-primary">
        </form>
        </div>
        <div class="card-footer">
            Author: <a href="/profile/{{post.author.username}}">{{post.author.username}}</a>
        </div>
    </div>
</div>

<script>
    document.getElementById('seeCommentsButton').addEventListener('click', () => {
        const commentsSection = document.getElementById('commentsSection');
        commentsSection.style.display = 'block';

        // Fetch and render comments here
    });

    function goBack() {
        window.history.back();
    }
</script>

